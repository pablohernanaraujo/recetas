/* inicio */

.card-title
	width 100%
	background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)

.collection .collection-item.avatar
	min-height 65px
		
.collection 
	//min-height 65px	
	
	& .collection-item
		background-color rgba(240,240,240,0.5)
		
		& p 
			color rgba(50,50,50,0.5)
		
.card 
	cursor zoom-in
	
	&:hover > .call-to-action
		opacity 1
	
.call-to-action
	position absolute
	top 0
	width 100%
	height 70px
	background linear-gradient(to top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
	transition opacity .5s ease-in
	opacity 0
	
	& a:hover 
		background-color lighten(principal,10)
	
.guardar
	margin 10px 10px 0 0
	
.favorito
	margin 10px 0 0 10px
	width 40px
	padding 0 10px
	
.call-data-contenedor
	display flex 
	justify-content center
	margin-top 15px
	width 45%
	
	& .favorite-contenedor
		width 50%
		color rgba(50,50,50,0.4)
		display flex
		justify-content center
		
		& i 
			padding-top 2px
			font-size 15px
			margin-right 5px
			
	& .basket-contenedor
		width 50%
		color rgba(50,50,50,0.4)
		display flex
		justify-content center
		
		& i 
			padding-top 2px
			font-size 15px
			margin-right 5px