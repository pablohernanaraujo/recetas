/* inicio */

.carta 
	& .card-title
		width 100%
		background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
	
	& .card
		cursor zoom-in

		&:hover > .call-to-action
			opacity 1
			
	&.card-content
		padding-bottom 10px !important		

.collection .collection-item.avatar
	min-height 65px

.collection
	//min-height 65px

	& .collection-item
		background-color rgba(240,240,240,0.5)

		& p
			color rgba(50,50,50,0.5)		

.call-to-action
	position absolute
	top 0
	width 100%
	height 70px
	background linear-gradient(to top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
	transition opacity .3s ease-in
	opacity 0

	& a:hover
		background-color lighten(principal,10)

.guardar
	margin 10px 15px 0 0

.favorito
	margin 10px 0 0 15px
	width 40px
	padding 0 10px

.call-data-contenedor
	display flex
	justify-content flex-end
	margin-top 15px
	width 100%

	& .favorite-contenedor
		width 25%
		color rgba(50,50,50,0.4)
		display flex
		justify-content center

		& i
			padding-top 2px
			font-size 15px
			margin-right 5px

	& .basket-contenedor
		width 25%
		color rgba(50,50,50,0.4)
		display flex
		justify-content center

		& i
			padding-top 2px
			font-size 15px
			margin-right 5px		

@media screen and (max-width: 650px)

	.call-data-contenedor
		& .favorite-contenedor
			width 35%
			
		& .basket-contenedor
			width 35%	
