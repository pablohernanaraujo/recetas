/* receta */

.receta-imagen
	width 100%
	margin-top 15px

.receta-usuario
	font-size 18px

.receta-fecha
	color rgba(0,0,0,0.5)

.receta-acciones
	margin 5px 0px 13px

.receta-btn-accion
	background-color principal
	margin 0
	padding 8px 15px
	color white
	border-radius 15px
	box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2)
	transition all 0.3s
	margin-right 8px

	& i
		font-size 14px
		margin-right 5px

	&:hover
		box-shadow 0 4px 4px 0 rgba(0, 0, 0, 0.14), 0 3px 7px 0 rgba(0, 0, 0, 0.12), 0 5px 3px -4px rgba(0, 0, 0, 0.2)
		background-color lighten(principal,10)

.receta-btn-accion-extras
	background-color white
	margin 0
	padding 8px 12px
	color #333
	border-radius 15px
	transition all 0.3s
	margin-right 8px

	& i
		font-size 14px

	&:hover
		box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2)

@media screen and (max-width: 650px)

	.receta-btn-accion
		background-color principal
		margin 0
		padding 8px 15px
		color white
		border-radius 15px
		box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2)
		transition all 0.3s
		margin-right 8px
